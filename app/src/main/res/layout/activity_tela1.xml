<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Quem somos"
        android:textColor="#F4F0F0"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="394dp"
        android:layout_height="114dp"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F3EEEE"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="287dp"
        tools:text="Mais Saúde é um aplicativo que visa melhorar a saúde e o bem-estar dos usuários por meio de diversas funcionalidades, como monitoramento de atividades físicas, controle de alimentação, dicas de saúde e bem-estar, entre outros." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F3EEEE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        tools:layout_editor_absoluteY="492dp"
        tools:text="O aplicativo também oferece a possibilidade de consultar profissionais de saúde e marcar consultas on-line, facilitando o acesso aos cuidados médicos. " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="392dp"
        android:layout_height="74dp"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F3EEEE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        tools:layout_editor_absoluteY="408dp"
        tools:text="Em resumo, o Mais Saúde é uma ferramenta completa para quem busca melhorar a qualidade de vida e cuidar da saúde de forma mais eficiente." />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="203dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="Avançar"
        app:iconTint="#EFEAEA"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="582dp" />

</androidx.constraintlayout.widget.ConstraintLayout>